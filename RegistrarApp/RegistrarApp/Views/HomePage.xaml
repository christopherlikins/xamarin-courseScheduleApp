<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RegistrarApp.Views.HomePage"
             Title="Home"
             BackgroundColor="CornflowerBlue">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="PopDatabaseButton" Text="Reset Database to Defaults" HorizontalOptions="CenterAndExpand" Clicked="PopDatabaseButton_Clicked"/>
            <Label Text="My personal information as an instructor can be found in the Study in Sisyphus course record."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   FontSize="Medium"
                   FontAttributes="Bold"/>
            <Label Text="The set of data for evaluation is the terms and courses populated by the code in HomePage.xaml.cs"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   FontSize="Medium"/>
            <Label Text="The Sample Data is in the database. To reset the sample data to default click the -Reset Database to Defaults- Button"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   FontSize="Medium"/>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>